@model IEnumerable<TravelAgencyBackend.Models.OfficialTravelSchedule>

@{
    ViewData["Title"] = "Index";
}

<h1>日程目錄</h1>

<p>
    <a asp-action="Create">新增</a> | 
    @Html.ActionLink("回到行程細節", "Index", "OfficialTravelDetails") | 
    @Html.ActionLink("回到專案管理", "Index", "OfficialTravels")
</p>
<table id="myTable" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficialTravelDetail.OfficialTravel.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficialTravelDetail.OfficialTravel.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfficialTravelScheduleId">編輯</a> |
                <a asp-action="Details" asp-route-id="@item.OfficialTravelScheduleId">檢視</a> |
                <a asp-action="Delete" asp-route-id="@item.OfficialTravelScheduleId">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}