@model TravelAgencyBackend.Models.Transportation

@{
    ViewData["Title"] = "EditTransportation";
}

<h1>EditTransportation</h1>

<h4>Transportation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTransportation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="TransportId" value="@Model.TransportId" />
            <div class="form-group">
                <label asp-for="TransportMethod" class="control-label"></label>
                <input asp-for="TransportMethod" class="form-control" />
                <span asp-validation-for="TransportMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
