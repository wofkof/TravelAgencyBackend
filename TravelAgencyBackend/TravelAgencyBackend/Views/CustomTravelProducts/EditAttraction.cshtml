@model TravelAgencyBackend.Models.Attraction

@{
    ViewData["Title"] = "EditAttraction";
}

<h1>EditAttraction</h1>

<h4>Attraction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAttraction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="AttractionId" value="@Model.AttractionId" />

            <div class="form-group">
                <label asp-for="DistrictId" class="control-label"></label>
                <input asp-for="DistrictId" class="form-control" />
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelSupplierId" class="control-label"></label>
                <input asp-for="TravelSupplierId" class="form-control" />
                <span asp-validation-for="TravelSupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScenicSpotName" class="control-label"></label>
                <input asp-for="ScenicSpotName" class="form-control" />
                <span asp-validation-for="ScenicSpotName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
