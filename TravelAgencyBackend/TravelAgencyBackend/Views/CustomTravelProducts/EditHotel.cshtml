@model TravelAgencyBackend.Models.Hotel

@{
    ViewData["Title"] = "EditHotel";
}

<h2>新增景點項目</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditHotel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="HotelId" value="@Model.HotelId" />
            <div class="form-group">
                <label asp-for="DistrictId" class="control-label"></label>
                <input asp-for="DistrictId" class="form-control" />
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelSupplierId" class="control-label"></label>
                <input asp-for="TravelSupplierId" class="form-control" />
                <span asp-validation-for="TravelSupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelName" class="control-label"></label>
                <input asp-for="HotelName" class="form-control" />
                <span asp-validation-for="HotelName" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <input type="submit" value="修改" class="btn btn-primary" />
                <a asp-action="List" class="btn btn-secondary">返回</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
