@model TravelAgencyBackend.Models.Restaurant

@{
    ViewData["Title"] = "EditRestaurant";
}

<h1>EditRestaurant</h1>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRestaurant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="RestaurantId" value="@Model.RestaurantId" />

            <div class="form-group">
                <label asp-for="DistrictId" class="control-label"></label>
                <input asp-for="DistrictId" class="form-control" />
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelSupplierId" class="control-label"></label>
                <input asp-for="TravelSupplierId" class="form-control" />
                <span asp-validation-for="TravelSupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label"></label>
                <input asp-for="RestaurantName" class="form-control" />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
