@model IEnumerable<TravelAgencyBackend.ViewModels.Order.OrderIndexViewModel>

@{
    ViewData["Title"] = "Orders";
}

<h1 class="text-center mb-4">訂單列表</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            訂單編號
                        </th>
                        <th>
                            會員名稱
                        </th>
                        <th>
                            行程編號
                        </th>
                        <th>
                            行程類別
                        </th>
                        <th>
                            參與人數
                        </th>
                        <th>
                            總金額
                        </th>
                        <th>
                            狀態
                        </th>
                        <th>
                            建立日期
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Member.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParticipantsCount)
                            </td>
                            <td class="text-right">
                                TWD @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @{
                                    var statusColor = "";
                                    switch (item.Status)
                                    {
                                        case TravelAgencyBackend.Models.OrderStatus.Paid:
                                            statusColor = "text-success";
                                            break;
                                        case TravelAgencyBackend.Models.OrderStatus.Pending:
                                            statusColor = "text-warning";
                                            break;
                                        case TravelAgencyBackend.Models.OrderStatus.Cancelled:
                                            statusColor = "text-danger";
                                            break;
                                        default:
                                            statusColor = "";
                                            break;
                                    }
                                }
                                <span class="@statusColor">@Html.DisplayFor(modelItem => item.Status)</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-outline-primary btn-sm">編輯</a>
                                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-outline-info btn-sm">詳細</a>
                                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-outline-danger btn-sm">刪除</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-right">
        <a asp-action="Create" class="btn btn-primary">新增訂單</a>
    </div>
</div>
