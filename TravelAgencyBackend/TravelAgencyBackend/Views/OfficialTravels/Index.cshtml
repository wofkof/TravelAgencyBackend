            @*     @Html.DisplayFor(modelItem => item.CreatedAt) *@
            @* </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.Country)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfficialTravelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfficialTravelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfficialTravelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}