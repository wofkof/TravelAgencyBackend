@model List<Member>

<h2>建立新聊天室</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>選擇要聯繫的會員：</label>
        <select name="memberId" class="form-select" required>
            @foreach (var member in Model)
            {
                <option value="@member.MemberId">@member.Name (@member.Email)</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">建立聊天室</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>
