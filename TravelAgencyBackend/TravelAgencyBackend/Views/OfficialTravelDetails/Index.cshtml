@model IEnumerable<TravelAgencyBackend.Models.OfficialTravelDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a> | 
    @Html.ActionLink("回到專案管理", "Index", "OfficialTravels") | 
    @Html.ActionLink("檢視行程日程", "Index", "OfficialTravelSchedules")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoldSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumGroupSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficialTravel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumGroupSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficialTravel.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.FlightId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfficialTravelDetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfficialTravelDetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfficialTravelDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
