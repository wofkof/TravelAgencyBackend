@model TravelAgencyBackend.ViewModels.Employee.EmployeeDeleteViewModel

@{
    ViewData["Title"] = "刪除員工";
}

<h1 class="mb-4 text-danger text-start">刪除員工作業</h1>
<h5 class="text-warning mb-4">請再次確認以下員工資料</h5>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Employee" asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="EmployeeId" />

            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 20%">姓名</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th scope="row">職稱</th>
                        <td>@Model.RoleName</td>
                    </tr>
                    <tr>
                        <th scope="row">聯絡電話</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th scope="row">信箱</th>
                        <td>@Model.Email</td>
                    </tr>
                    @* <tr> *@
                    @*     <th scope="row">入職日</th> *@
                    @*     <td>@Model.HireDate</td> *@
                    @* </tr> *@
                    <tr>
                        <th scope="row">備註</th>
                        <td>@Model.Note</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4 d-flex gap-3">
                <input type="submit" value="確定刪除" class="btn btn-outline-danger btn-lg px-4" />
                <a asp-action="List" class="btn btn-outline-secondary btn-lg px-4">取消並返回列表</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="border rounded p-2 bg-light text-center" style="min-height: 250px;">
            @* <img src="@Model.PhotoUrl" alt="大頭貼" class="img-fluid" style="max-height: 250px;" /> *@
        </div>
    </div>
</div>
