@using TravelAgencyBackend.ViewModels.Employee
@model EmployeeDeleteViewModel

@{
    ViewData["Title"] = "刪除員工";
}

<h1 class="text-danger">刪除員工作業</h1>
<h4 class="text-warning">請再次確認以下員工資料</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Employee" asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="EmployeeId" />

            <div class="form-group">
                <label class="control-label">姓名</label>
                <input class="form-control" value="@Model.Name" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">職稱</label>
                <input class="form-control" value="@Model.RoleName" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">聯絡電話</label>
                <input class="form-control" value="@Model.Phone" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">信箱</label>
                <input class="form-control" value="@Model.Email" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">備註</label>
                <textarea class="form-control" rows="3" readonly>@Model.Note</textarea>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="確定刪除" class="btn btn-danger" />
                <a asp-action="List" class="btn btn-secondary">取消並返回列表</a>
            </div>
        </form>
    </div>
</div>

